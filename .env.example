# Environment variables untuk PMO Recovery Bot

# Telegram Bot Token (dapatkan dari @BotFather)
BOT_TOKEN=your_bot_token_here

# Database Configuration
DATABASE_URL=sqlite:///data/database.db

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Bot Configuration
BOT_USERNAME=pmo_recovery_bot
ADMIN_USER_ID=your_telegram_user_id

# Timezone
TIMEZONE=Asia/Jakarta

# Daily reminder time (24-hour format)
DAILY_REMINDER_TIME=08:00

# Daily Broadcast Schedule (24-hour format)
AFTERNOON_BOOST_TIME=15:00
EVENING_REFLECTION_TIME=21:00

# Weekly Summary Schedule
WEEKLY_SUMMARY_DAY=6
WEEKLY_SUMMARY_TIME=10:00

# Debug Mode
DEBUG=false
